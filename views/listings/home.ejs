    }
  
    /* Responsive Styles */
    @media (max-width: 768px) {
      h1 {
        font-size: 3rem;
      }
  
      h3 {
        font-size: 2.5rem;
      }
  
      h2 {
        font-size: 2rem;
      }
  
      button {
        font-size: 1rem;
        padding: 8px 16px;
      }
    }
  
    @media (max-width: 1200px) {
      h1 {
        font-size: 4rem;
      }
  
      h3 {
        font-size: 3.5rem;
      }
  
      h2 {
        font-size: 3rem;
      }
    }
