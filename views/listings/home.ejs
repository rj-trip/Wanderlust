<% layout("/layouts/boilerplate") %>

 <style>
    body {
      background-image: url('https://www.newsnetnow.com/wp-content/uploads/2020/03/MANALI.jpg');
      background-repeat: no-repeat;
      background-size: cover; 
      background-attachment: fixed; 
      background-position: center; 
      min-height: 100vh; 
    }
  

    h1, h3, h2 {
      /* color: white;
      text-align: center; 
   margin: 0;*/
   font-family: "Times New Roman", serif;
    }
  
    h1 {
      font-size: 6rem;
    }
  
    h3 {
      font-size: 5rem;
    }
  
    h2 {
      font-size: 4rem;
    }
  
    button {
      font-size: 1.5rem;
      padding: 10px 20px;
      background-color: #ff9900;
      border: none;
      color: white;
      cursor: pointer;
      border-radius: 5px;
      transition: background-color 0.3s ease, transform 0.3s ease;
    }
  
    button:hover {
      background-color: #e68a00;
      transform: scale(1.05);
    }
  
    .row {
      /* display: flex;
      justify-content: center;
      align-items: center; */
